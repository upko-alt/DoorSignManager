# E-Paper Dashboard - Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_DB=epaper_dashboard
POSTGRES_USER=epaper_user
POSTGRES_PASSWORD=your_secure_password_here  # REQUIRED: Change this!

# ============================================
# Session Configuration
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_very_long_random_string_here  # REQUIRED: Change this!

# ============================================
# E-Paper API Configuration (Optional)
# ============================================
# Leave empty if you don't have e-paper hardware yet
EPAPER_IMPORT_URL=
EPAPER_IMPORT_KEY=
EPAPER_EXPORT_URL=
EPAPER_EXPORT_KEY=

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=5000
