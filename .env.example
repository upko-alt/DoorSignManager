# E-Paper Dashboard - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# PostgreSQL Database Configuration (Docker)
# ============================================
POSTGRES_DB=epaper_dashboard
POSTGRES_USER=epaper_user
POSTGRES_PASSWORD=change_this_secure_password_123

# ============================================
# Session Configuration
# ============================================
# Secret key for session encryption - MUST be random and secure
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_very_long_random_string_here_at_least_32_characters

# ============================================
# Cookie Security
# ============================================
# Set to 'false' for HTTP access (testing/development)
# Set to 'true' for HTTPS/SSL production deployment
COOKIE_SECURE=false

# ============================================
# Admin User Configuration (Auto-created on first run)
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@department.edu

# ============================================
# E-Paper API Configuration
# ============================================
# Contact your e-paper hardware provider for these credentials

# Import API - sends status updates TO e-paper displays
EPAPER_IMPORT_URL=https://your-epaper-api.com/import
EPAPER_IMPORT_KEY=your_import_api_key_here

# Export API - fetches current status FROM e-paper displays  
EPAPER_EXPORT_URL=https://your-epaper-api.com/export
EPAPER_EXPORT_KEY=your_export_api_key_here

# ============================================
# Application Configuration
# ============================================
# Environment (development, production)
NODE_ENV=production

# Port for the application (default: 5000)
PORT=5000

# ============================================
# PostgreSQL Individual Settings (for reference)
# ============================================
# These are used by Drizzle for migrations
# They should match the DATABASE_URL
PGHOST=localhost
PGPORT=5432
PGDATABASE=epaper_dashboard
PGUSER=epaper_user
PGPASSWORD=your_secure_password
